---
import { getHomePermalink } from '~/utils/permalinks';
---

<section class="flex items-center h-full p-16">
	<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
		<div class="max-w-md text-center">
			<h2 class="mb-8 font-bold text-9xl">
				<span class="sr-only">Error</span>
				<span class="text-mainYellow">404</span>
			</h2>
			<p class="text-3xl font-semibold md:text-3xl mb-12 sm:mb-6">Sorry, we couldn't find the page you were looking for.</p>
			<a
				rel="noopener noreferrer"
				href={getHomePermalink()}
				class="text-mainRed bg-mainYellow text-xl sm:text-3xl font-medium sm:font-bold rounded-2xl drop-shadow-2xl px-4 sm:px-8 py-4"
				>Back to homepage</a
			>
		</div>
	</div>
</section>
